<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.svamp.wifitracker" android:debuggable="true">
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7"></uses-sdk>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

	<application android:label="@string/wifitracker_name"
		android:debuggable="true">
		<uses-library android:name="com.google.android.maps" />


		<activity android:name="MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="CompassActivity"></activity>
		<activity android:name="SettingsActivity"></activity>
		<activity android:name="TrackerMapActivity"></activity>
		<activity android:name=".TracerTabHost" android:theme="@android:style/Theme.NoTitleBar"></activity>
	</application>
</manifest>
 
